{
  "manifest_version": 3,
  "name": "Viboot - Stream Control",
  "version": "2.0",
  "description": "Sleep timer for streaming platforms. Don't binge. Sleep better.",
  "permissions": ["storage", "alarms", "scripting", "notifications", "activeTab"],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.youtube.com/*",
    "*://*.disneyplus.com/*",
    "*://*.max.com/*",
    "*://*.hbomax.com/*",
    "*://*.primevideo.com/*",
    "*://*.amazon.com/*",
    "*://*.crunchyroll.com/*",
    "*://*.twitch.tv/*",
    "*://*.hulu.com/*",
    "https://viboot.onrender.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.youtube.com/*",
        "*://*.crunchyroll.com/*",
        "*://*.disneyplus.com/*",
        "*://*.max.com/*",
        "*://*.hbomax.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/gp/video/*",
        "*://*.twitch.tv/*",
        "*://*.hulu.com/*"
      ],
      "js": ["content/streaming-controller.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Viboot Sleep Timer",
    "default_icon": {
      "16": "assets/icons/favicon-16x16.png",
      "32": "assets/icons/favicon-32x32.png",
      "192": "assets/icons/android-chrome-192x192.png",
      "512": "assets/icons/android-chrome-512x512.png"
    }
  },
  "icons": {
    "16": "assets/icons/favicon-16x16.png",
    "32": "assets/icons/favicon-32x32.png",
    "48": "assets/icons/favicon-32x32.png",
    "128": "assets/icons/android-chrome-192x192.png"
  }
}